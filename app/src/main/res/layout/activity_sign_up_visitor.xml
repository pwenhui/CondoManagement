<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar as Navigation Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:elevation="4dp">

        <!-- Title in Toolbar -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="MYConnectNest"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"> <!-- Center all child elements horizontally -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/account_information"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Email -->
            <EditText
                android:id="@+id/edit_text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Address *"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Label for Account Type Spinner -->
            <TextView
                android:id="@+id/label_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Type *"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />
            <!-- Dropdown Selection -->
            <Spinner
                android:id="@+id/dropdown_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown"
                android:padding="20dp"
                android:background="@drawable/spinner_design"
                android:contentDescription="Dropdown menu to select an option" />


            <!-- Password -->
            <EditText
                android:id="@+id/visitor_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password *"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Confirm Password -->
            <EditText
                android:id="@+id/visitor_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password *"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="35dp" />

            <!-- Basic Information -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/basic_information"
                android:textSize="24sp"
                android:textStyle="bold" />


            <!-- First Name -->
            <EditText
                android:id="@+id/edit_firstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Name *"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Last Name -->
            <EditText
                android:id="@+id/edit_lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name *"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Nick Name (optional) -->
            <EditText
                android:id="@+id/edit_nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nick Name (optional)"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- DOB-->
            <EditText
                android:id="@+id/edit_text_id_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date of Birth *"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Phone Number -->
            <EditText
                android:id="@+id/edit_text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number * (Start with country code)"
                android:inputType="phone"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Label for Home Country Spinner -->
            <TextView
                android:id="@+id/label_HomeCountrydropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Country *"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Home Country Dropdown Selection -->
            <Spinner
                android:id="@+id/HomeCountrydropdown_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown"
                android:padding="20dp"
                android:background="@drawable/spinner_design"
                android:contentDescription="Dropdown menu to select an option" />

            <!-- Label for Present Country Spinner -->
            <TextView
                android:id="@+id/label_PresentCountrydropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Present Country *"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp" />

            <!-- Present Present Country Dropdown Selection -->
            <Spinner
                android:id="@+id/PresentCountrydropdown_selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown"
                android:padding="20dp"
                android:background="@drawable/spinner_design"
                android:contentDescription="Dropdown menu to select an option" />

            <!-- Lifestyle Preferences -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/lifestyle_information"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Smoke Question -->
            <EditText
                android:id="@+id/edit_text_smoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Do you smoke ? * (Y/N)"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Pet Question -->
            <EditText
                android:id="@+id/edit_text_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Do you have pet ? * (Y/N)"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Vehicle Information -->
            <EditText
                android:id="@+id/edit_text_vehicle_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Vehicle Information"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />




            <Button
                android:id="@+id/button_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:padding="12dp"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>